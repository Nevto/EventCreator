{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@nomiclabs/hardhat-ethers": ["node_modules/@nomiclabs/hardhat-ethers"],
      "@typechain/hardhat": ["node_modules/@typechain/hardhat"]
    }
  },
  "include": ["hardhat.config.ts", "scripts", "test", "typechain"],
  "exclude": ["node_modules"]
}
